void sort_decision(int col_index, string sort){
	if(sort=="Від А до Я")
		string_AZ(col_index);
	else if(sort=="Від Я до А")
		string_ZA(col_index);
	/*else if(sort=="Від меншого до більшого")
		num_12(col_index);
	else if(sort=="Від більшого до меншого")
		num_21(col_index);
	else if(sort=="Спочатку true")
		bool_tf(col_index);
	else if(sort=="Спочатку false")
		bool_ft(col_index);    */
}
